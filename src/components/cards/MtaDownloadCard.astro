---
const { icon: Icon, title, version, size, os, description } = Astro.props;
---

<div
  class="bg-gray-900/40 p-6 rounded-xl border group border-gray-700 hover:border-blue-500 transition-all duration-300 hover:bg-gray-800/70 cursor-pointer group"
>
  <div class="flex flex-col items-center justify-center gap-4">
    <figure
      class="bg-blue-900/40 p-4 rounded-xl text-blue-400 group-hover:text-blue-300 transition-colors duration-300 flex items-center justify-center"
    >
      <Icon size="30" />
    </figure>
    <div class="text-center w-full">
      <h3
        class="text-yellow-300 text-2xl font-bold group-hover:scale-110 transition-all duration-300"
      >
        {title}
      </h3>
      <p class="text-gray-300">{os}</p>
      <div
        class="flex items-center justify-center gap-3 text-sm text-gray-400 mb-2"
      >
        {version && <span>Version {version}</span>}
        {size && <span>â€¢ {size}</span>}
      </div>
      <div>
        <p class="text-gray-300 max-w-64 mx-auto">{description}</p>
      </div>
    </div>
  </div>
  <div class="mt-4 flex items-center justify-between">
    <span
      class="text-blue-400 text-sm group-hover:text-blue-300 transition-colors duration-300"
      >Download Now</span
    >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-5 w-5 text-blue-400 group-hover:text-blue-300 transition-colors duration-300"
      viewBox="0 0 20 20"
      fill="currentColor"
    >
      <path
        fill-rule="evenodd"
        d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z"
        clip-rule="evenodd"></path>
    </svg>
  </div>
</div>
