---
import Dangerous from "./icons/Dangerous.astro";
import Download from "./icons/Download.astro";
---

<section
  class="flex flex-col md:flex-row items-center justify-center mt-24 text-center md:text-left px-24"
>
  <!-- Texto -->
  <div
    class="flex flex-col items-center md:items-start justify-center md:w-1/2 space-y-6"
  >
    <!-- Título + Badge -->
    <div
      class="flex items-center justify-center md:justify-start flex-wrap gap-4"
    >
      <h1 class="text-5xl font-extrabold">Multi Theft Auto San Andreas</h1>

      <span
        class="relative inline-block overflow-hidden rounded-full p-[2.5px] hover:scale-105 transition-all duration-200"
      >
        <span
          class="absolute inset-[-1000%] animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#CBE0FF_0%,#399EB2_50%,#CBFFFF_100%)]"
        ></span>
        <div
          class="inline-flex h-full w-full cursor-pointer items-center justify-center rounded-full bg-gray-800 px-4 py-2 text-xs font-medium text-gray-50 backdrop-blur-3xl"
        >
          MTA:SA 1.6v Available Now!
        </div>
      </span>
    </div>

    <!-- Párrafo -->
    <div>
      <p class="max-w-2xl text-lg mb-4">
        The definitive multiplayer modification for GTA San Andreas. Experience
        San Andreas with friends on servers featuring Roleplay, Freeroam, DayZ,
        Stunt and much more.
      </p>
      <a
        href="/"
        class="bg-blue-600 flex gap-x-4 px-4 py-2 max-w-1/3 rounded-lg text-lg text-white font-medium hover:bg-blue-700 transition-all duration-200 mt-4"
      >
        <span><Download /></span> Download MTA:SA</a
      >
      <p>
        <span class="text-yellow-400 flex items-center gap-x-2 mt-4"
          ><Dangerous /> Requires an original copy of GTA: San Andreas.</span
        >
      </p>
    </div>
  </div>

  <!-- Imagen -->
  <figure class="flex justify-center items-center mt-10 md:mt-0 md:w-1/2">
    <img
      src="./src/assets/pictures/picture1.webp"
      alt="Picture 1"
      class="object-cover w-4/5 rounded-tl-[128px] rounded-br-[128px]"
    />
  </figure>
</section>
