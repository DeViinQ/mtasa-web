---
interface Props {
  title: string;
  description: string;
  category: string;
  author: string;
  downloads: number;
}
const { title, description, category, author, downloads } = Astro.props;
---

<div
  class="group relative bg-gradient-to-br from-blue-900/30 to-blue-800/30 border border-blue-800/40 backdrop-blur-md py-6 rounded-xl px-6 transition-all duration-300 hover:shadow-2xl hover:shadow-blue-500/20 hover:border-blue-500/70 hover:-translate-y-1"
>
  <!-- Efecto de brillo en hover -->
  <div
    class="absolute inset-0 bg-gradient-to-tr from-blue-600/0 to-blue-400/0 opacity-0 group-hover:opacity-10 transition-opacity duration-500 z-0 rounded-xl"
  >
  </div>

  <header class="flex justify-between items-center mb-6">
    <h2
      class="text-white text-2xl font-bold group-hover:text-blue-200 transition-colors duration-300"
    >
      {title}
    </h2>
    <span
      class="text-blue-300 bg-blue-800/50 px-4 py-1.5 rounded-full border border-blue-700/50 text-xs font-semibold tracking-wide transition-all duration-300 hover:bg-blue-700/50 hover:border-blue-500/50 hover:text-blue-200 transform hover:scale-105"
    >
      {category}
    </span>
  </header>

  <main class="mb-8">
    <p
      class="text-blue-200/90 text-sm leading-relaxed group-hover:text-blue-100 transition-colors duration-300"
    >
      {description}
    </p>
  </main>

  <footer class="flex flex-col items-center gap-4 text-sm text-gray-400">
    <div class="flex items-center gap-3 text-[13px]">
      <span
        class="font-semibold text-yellow-300/90 group-hover:text-yellow-200 transition-colors duration-300 flex items-center gap-1"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
          ></path>
        </svg>
        {downloads} downloads
      </span>
      <span class="text-gray-600">â€¢</span>
      <p>
        by <span
          class="font-bold text-white/90 group-hover:text-white transition-colors duration-300"
          >{author}</span
        >
      </p>
    </div>

    <a
      href="/"
      class="inline-flex cursor-pointer items-center justify-center gap-2 text-white bg-gradient-to-br from-blue-600 via-blue-500 to-indigo-600 hover:from-blue-500 hover:via-indigo-500 hover:to-purple-600 transform hover:scale-105 transition-all duration-300 px-7 py-3 rounded-xl text-sm font-bold shadow-xl shadow-blue-600/30 hover:shadow-blue-500/50 border border-blue-500/20 hover:border-blue-400/40 backdrop-blur-sm relative overflow-hidden group"
    >
      <!-- Efecto de brillo en hover -->
      <span
        class="absolute inset-0 w-full h-full bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-[150%] group-hover:translate-x-[150%] transition-transform duration-700 ease-in-out"
      ></span>

      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 group-hover:animate-pulse"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
        ></path>
      </svg>
      <span class="relative z-10">Ver Recurso</span>
    </a>
  </footer>
</div>
