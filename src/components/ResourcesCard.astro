---
interface Props {
  title: string;
  description: string;
  category: string;
  author: string;
  downloads: number;
}
const { title, description, category, author, downloads } = Astro.props;
---

<div
  class="bg-blue-900/30 border border-blue-800/40 backdrop-blur-md py-6 rounded-xl px-6 transition hover:shadow-xl hover:border-blue-600/70"
>
  <header class="flex justify-between items-center mb-4">
    <h2 class="text-white text-xl font-bold">{title}</h2>
    <span
      class="text-blue-300 bg-blue-800/50 px-3 py-1 rounded-full border border-blue-700 text-[10px] font-semibold tracking-wide transition hover:bg-blue-700/50"
    >
      {category}
    </span>
  </header>
  <main class="mb-6">
    <p class="text-blue-200 text-sm leading-snug">{description}</p>
  </main>
  <footer class="flex flex-col items-center gap-3 text-[11px] text-gray-400">
    <div class="flex items-center gap-2">
      <span class="font-semibold text-yellow-300">{downloads} downloads</span>
      <span class="text-gray-600">â€¢</span>
      <p>by <span class="font-bold text-white">{author}</span></p>
    </div>
    <a
      href="#"
      class="inline-flex items-center gap-2 text-white bg-blue-600 hover:bg-blue-700 hover:scale-105 transition-all px-6 py-2 rounded-lg text-xs font-semibold"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-3.5 w-3.5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 10l4.553 2.276A2 2 0 0121 14.118V17a2 2 0 01-2 2h-2.118a2 2 0 01-1.842-1.157L15 15m0-5v5m-6-3l-4.553-2.276A2 2 0 003 9.882V7a2 2 0 012-2h2.118a2 2 0 011.842 1.157L9 9m0 5v-5"
        ></path>
      </svg>
      Watch Resource
    </a>
  </footer>
</div>
